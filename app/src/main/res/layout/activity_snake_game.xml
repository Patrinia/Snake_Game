<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".SnakeGameActivity">

    <com.example.myapplication.SnakeView
        android:id="@+id/snake_game_area"
        android:layout_width="0dp"  android:layout_height="0dp" android:background="#A3E4D7" app:layout_constraintBottom_toTopOf="@+id/control_buttons_container"
        app:layout_constraintDimensionRatio="1:1" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" app:layout_constraintVertical_chainStyle="packed" />

    <LinearLayout
        android:id="@+id/control_buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="84dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingEnd="40dp">

            <ImageButton
                android:id="@+id/btn_up"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="UP"
                android:padding="1dp"
                android:scaleType="fitCenter"
                android:src="@drawable/arrow_up" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_left"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:contentDescription="LEFT"
                    android:padding="1dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/arrow_left" />

                <ImageButton
                    android:id="@+id/btn_right"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="60dp"
                    android:contentDescription="RIGHT"
                    android:padding="1dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/arrow_right" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_down"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                android:contentDescription="DOWN"
                android:padding="1dp"
                android:scaleType="fitCenter"
                android:src="@drawable/arrow_down" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_action"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="1dp"
            android:text="가속"
            android:textSize="25sp"
            app:backgroundTint="#009586" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>